{
  "manifest_version": 2,

  "name": "Managebac Grade Calculator",
  "version": "0.1.1",
  "description": "Grade Calculator",
  "author": "Bertram Skarupa",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "*://*.managebac.com/student/*", "tabs", "webNavigation"
  ],
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["./resources/jquery-3.2.1.min.js", "content.js"],
    "matches": ["*://*.managebac.com/student/*"]
  }],
  "icons": { "16": "./resources/icon16.png",
           "48": "./resources/icon48.png",
          "128": "./resources/icon128.png" }
}
